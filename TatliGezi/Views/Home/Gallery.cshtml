@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model TatliGezi.Models.MultipleData.MainPage

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1" name="viewport">

    <!-- ========== SEO ========== -->
    <title>Gul - Blog & Shop HTML Template</title>
    <meta content="" name="description">
    <meta content="" name="keywords">
    <meta content="" name="author">

    <!-- ========== FAVICON ========== -->
    <link rel="apple-touch-icon-precomposed" href="Images/favicon-apple.png" />
    <link rel="icon" href="Images/favicon.png">

    <!-- ========== STYLESHEETS ========== -->
    <link rel="stylesheet" href="/Content/Main/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Content/Main/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="/Content/Main/css/swiper.min.css">
    <link rel="stylesheet" href="/Content/Main/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/Content/Main/css/magnific-popup.css">
    <link rel="stylesheet" href="/Content/Main/css/style.css">
    <link rel="stylesheet" href="/Content/Main/css/responsive.css">
    @*@RenderSection("css", required: false)*@

    <!-- ========== ICON FONTS ========== -->
    <link href="/Content/Main/fonts/font-awesome.min.css" rel="stylesheet">
    <link href="/Content/Main/fonts/flaticon.css" rel="stylesheet">

    <!-- ========== GOOGLE FONTS ========== -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>


    @Html.Partial("_Header", Model)



    @if (Session["Search"] == null)
    {
        <!-- =========== PAGE TITLE ========== -->
        <div class="page-title">
            <div class="container">
                <div class="inner">
                    <h1>GALERİ</h1>
                    <ol class="breadcrumb">
                        <li><a href="/anasayfa/">ANASAYFA</a></li>
                        <li><a href="/Galeri/">GALERİ</a></li>
                    </ol>
                </div>
            </div>
        </div>

        <!-- =========== MAIN ========== -->
        <main id="portfolio-page">
            @*<div class="container">
                    <div class="grid-filters">
                        <a href="#" data-filter="*" class="button btn_sm btn_blue active">All Categories</a>
                        <a href="#" data-filter=".p-interior-design" class="button btn_sm btn_blue">Interior Design</a>
                        <a href="#" data-filter=".p-handmade-toys" class="button btn_sm btn_blue">Handmade Toys</a>
                        <a href="#" data-filter=".p-travel" class="button btn_sm btn_blue">Travel - Holidays</a>
                        <a href="#" data-filter=".p-fashion" class="button btn_sm btn_blue">Fashion Design</a>
                    </div>
                </div>*@
            <div class="container">
                <div class="row">
                    <div class="grid gallery-items image-gallery">
                        @foreach (var item in Model.gList)
                        {
                            <div class="g-item col-md-3 col-sm-6 p-interior-design">
                                <figure class="image-hover">
                                    <a href="@item.PhotoPath">
                                        <img src="@item.PhotoPath" class="img-responsive" alt="Image">
                                        <span class="view-text">Resmi Gör</span>
                                    </a>
                                    <figcaption>

                                        <h6 class="btn btn-link fa-meh-blank" role="link" onclick="window.open('@item.Url')">Resim Adresine Git </h6>
                                        @if (item.Content != null)
                                        {
                                            <span>@item.Content</span>

                                        }

                                    </figcaption>
                                </figure>

                            </div>

                        }
                    </div>


                </div>
            </div>
        </main>
    }
    else
    {

        <main class="blog">
            <div class="container">

                <div class="row">
                    <!-- POSTS -->
                    <div class="col-md-9" id="ajax-main">
                        @Html.Partial("_AnotherArticle", Model)
                    </div>
                    <!-- SIDEBAR -->
                    <div class="col-md-3">
                        <!-- WIDGET -->
                        <aside class="widget nobox">
                            <div class="about-author">
                                <div class="about-author-image">
                                    <figure class="image-hover">
                                        <a href="/Home/About/">
                                            <img src="~/Images/about3.jpg" class="img-responsive" alt="Image">
                                            <span class="view-text">Detayı Gör</span>
                                        </a>
                                    </figure>
                                </div>
                                <div class="about-author-info">
                                    <div class="about-author-info-inner">
                                        <h2>Gül İşçioğlu</h2>
                                        <span>Writter / Software Scientist</span>
                                        <p>Kendini geliştiren bir yazılımcı ve hayalperest bir yazar.</p>
                                    </div>
                                </div>
                                <div class="about-author-social-media">
                                    <a href="https://www.facebook.com/gul.iscioglu"><i class="fa fa-facebook" data-toggle="tooltip" data-original-title="Follow me on Facebook"></i></a>
                                    <a href="https://www.instagram.com/guliscioglu/"><i class="fa fa-instagram" data-toggle="tooltip" data-original-title="Follow me on Instagram"></i></a>

                                    <a href="https://twitter.com/guliscioglu"><i class="fa fa-twitter" data-toggle="tooltip" data-original-title="Follow me on Twitter"></i></a>
                                    @*<a href="#"><i class="fa fa-google-plus" data-toggle="tooltip" data-original-title="Follow me on Google +"></i></a>*@
                                    <a href="https://www.linkedin.com/in/g%C3%BCl-i%C5%9F%C3%A7io%C4%9Flu-97806274/"><i class="fa fa-linkedin" data-toggle="tooltip" data-original-title="Follow me on Linkedin"></i></a>
                                    @*<a href="#"><i class="fa fa-youtube" data-toggle="tooltip" data-original-title="Follow me on YouTube"></i></a>*@
                                    <a href="/Home/About/" class="btn xs white br pull-right">Daha Fazlası</a>
                                </div>
                            </div>
                        </aside>
                        <!-- WIDGET -->
                        <aside class="widget mb30">
                            <div class="sidebar-search">
                                <form method="get" class="widget_search">
                                    <input type="search" name="SearchString" class="form-control" placeholder="Arama">
                                    <button type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </form>
                            </div>
                        </aside>
                        <!-- WIDGET -->
                        <aside class="widget mb30">
                            <h4 class="widget-title">KATEGORİLER</h4>
                            <div class="inner">
                                <ul class="categories">
                                    @foreach (var item in ViewData["Kategori1"] as IList<TatliGezi.Models.ArticleCategory>)
                                    {
                                        <li><a href="/Home/CategoryPage/@item.ID">@item.CategoryName</a></li>
                                    }
                                </ul>
                            </div>
                        </aside>
                        <!-- WIDGET -->
                        <aside class="widget">
                            <h4 class="widget-title"><i class="fa fa-instagram" aria-hidden="true"></i> Galleri / İnstagram </h4>
                            <div class="inner">
                                <div class="instagram-widget">
                                    <ul class="list-unstyled">
                                        @foreach (var item in ViewData["Gallery"] as IList<TatliGezi.Models.Gallery>)
                                        {
                                            <li class="image-hover">
                                                <a href="@item.Url">
                                                    <img src="@item.PhotoPath" class="img-responsive" alt="Image">
                                                    <span class="view-text sm">Instagram'da Gör</span>
                                                </a>
                                            </li>
                                        }

                                    </ul>
                                </div>
                            </div>
                        </aside>
                        <!-- WIDGET -->
                        @*<aside class="widget">
                                <h4 class="widget-title">NEWSLETTER</h4>
                                <div class="inner">
                                    <div class="newsletter">
                                        <p>Enter your email address below to subscribe to my newsletter</p>
                                        <form name="subscribe-form">
                                            <div class="form-group">
                                                <input type="email" name="email" class="form-control" placeholder="Enter you email">
                                                <button type="submit" class="btn md pink fw mt30">SUBSCIBE NOW</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </aside>*@
                        <!-- WIDGET -->
                        <aside class="widget">
                            <h4 class="widget-title">Son  Gönderiler</h4>
                            <div class="inner">
                                <div class="latest-posts">

                                    @foreach (var item in ViewData["LastList"] as IList<TatliGezi.Models.Article>)
                                    {
                                        <article class="latest-post">
                                            <figure>
                                                <a href="/Home/Detay/@item.ID">
                                                    <img src="@item.PhotoPath1" class="img-responsive fw" alt="Image">
                                                </a>
                                                <figcaption class="details">
                                                    <h6 class="title"><a href="/Home/Detay/@item.ID">@item.ArticleTitle</a></h6>
                                                    <div class="meta">
                                                        <span><a href="/Home/Detay/@item.ID"><i class="fa fa-commenting-o" aria-hidden="true"></i> @item.ArticleComment.Where(x => x.IsDelete == false).Count() yorum </a></span>
                                                    </div>
                                                </figcaption>
                                            </figure>
                                        </article>
                                    }
                                </div>
                            </div>
                        </aside>
                        <!-- WIDGET -->
                        @*<aside class="widget">
                                <a href="#">
                                    <img src="images/banner.png" class="img-responsive" alt="Image">
                                </a>
                            </aside>*@
                    </div>
                </div>

            </div>
        </main>

    }


    <!-- ========== FOOTER ========== -->
    @Html.Partial("_Footer", Model)


    <!-- ========== BACK TO TOP ========== -->
    <div id="back-to-top">
        <i class="fa fa-angle-up" aria-hidden="true"></i>
    </div>

    <!-- ========== SEARCH ========== -->
    <div class="fullscreen-search open-search">
        <div class="inner">


            <form class="search-form" method="get">

                <div class="search-title">
                    <h1 class="title">Aramaya Başla</h1>
                    @*<h1 class="title-down">Aranıyor...</h1>*@
                </div>
                <fieldset class="field-container">

                    <input type="text" name="SearchString" placeholder="Arama..." class="field form-control" />
                    <div class="icons-container">
                        <div class="icon-search"><i class="fa fa-search" aria-hidden="true"></i></div>
                        <div class="icon-close"><i class="fa fa-times" aria-hidden="true"></i></div>
                    </div>
                </fieldset>

            </form>

        </div>
        <button class="search-close" type="submit"><i class="fa fa-times"></i></button>


    </div>

    @section js{

        <script src="~/Scripts/DeleteProduct.js"></script>
    }


</body>
</html>
