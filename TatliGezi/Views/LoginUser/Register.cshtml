
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@model TatliGezi.Models.User

<head>
    <!-- ========== SEO ========== -->
    <title>Tatli Gezi - Kullanıcı Kayıt</title>

    <meta content="Kullanıcı yeni kayıt ve bilgileri " name="description">
    <meta content="kullanıcı, yeni kayıt, giriş" name="keywords">
    <meta content="Gül İşçioğlu" name="author">



</head>



<!-- ========== HEADER ========== -->
@Html.Partial("_Header", Model)



<!-- ========== MAIN ========== -->
<div class="page-title">
    <div class="container">
        <div class="inner">
            <h1>Kayıt Ol</h1>
            @*<ol class="breadcrumb">
                    <li><a href="index.html">AnaSayfa</a></li>
                    <li>Kayıt Ol</li>
                </ol>*@
        </div>
    </div>
</div>

<!-- =========== MAIN ========== -->
@using (Html.BeginForm())
{




    <div class="container" style="margin-bottom:20px;">
        @if (ViewBag.Durum == 0)
        {
            <div class="alert alert-danger">Ooopsss!...Bu kullanıcı zaten kayıtlı.</div>
        }

        @if (ViewBag.Durum == -1)
        {
            <div class="alert alert-danger">Ooopsss!...Lütfen Gerekli Alanları Doldurunuz.</div>
        }

        @if (ViewBag.Durum == -2)
        {
            <div class="alert alert-danger">Ooopsss!...Şifreniz en az 8 karakter,1 büyük harf, 1 küçük harf ve 1 rakam içermelidir.</div>
        }
        @if (ViewBag.Durum == -3)
        {
            <div class="alert alert-danger">Ooopsss!...Şifreler uyuşmuyor.</div>
        }
        <div class="row">
            <div class="col-lg-8">
                <form method="post">


                    <div class="product-tabs mt50">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#description" aria-controls="description" role="tab" data-toggle="tab">Üye Ol</a></li>
                            <li role="presentation"><a href="/girisyap">Giriş Yap</a></li>

                        </ul>
                        <div class="tab-content">
                            <!-- TAB -->
                            <div role="tabpanel" class="tab-pane active" id="description">
                                <div class="form-group mb30">

                                    <div class="row">
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(x => x.Name, new { placeholder = "İsim", @class = "form-control", type = "text", name = "Name", })

                                        </div>
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(x => x.Surname, new { placeholder = "Soyisim", @class = "form-control", type = "text", name = "Surname" })

                                        </div>



                                    </div>
                                </div>

                                <div class="form-group mb30">
                                    <div class="row">

                                        <div class="col-md-6">
                                            @Html.TextBoxFor(x => x.Email, new { placeholder = "Mail Adresi", @class = "form-control", type = "email", name = "Mail" })



                                        </div>
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(x => x.Email, new { placeholder = "Telefon", @class = "form-control", type = "phone", name = "Phone" })



                                        </div>
                                    </div>
                                </div>

                                <div class="form-group mb30">

                                    <div class="row">
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(x => x.Password, new { placeholder = "Şifre", @class = "form-control", type = "password", name = "Password", @maxLength = "30", qminLength = "8" })

                                        </div>
                                        <div class="col-md-6">
                                            @Html.TextBoxFor(x => x.ConfirmPassword, new { placeholder = "Şifre Tekrar", @class = "form-control", type = "password", name = "ConfirmPassword", @maxLength = "30", qminLength = "8" })

                                        </div>



                                    </div>
                                </div>


                            </div>
                            <div colspan="50" class="a-right pt50">
                                <input type="submit" name="name" class="btn md green" value="Kayıt Ol" />
                            </div>
                        </div>




                    </div>

                </form>
            </div>
        </div>
    </div>
}





<!-- ========== FOOTER ========== -->
@Html.Partial("_Footer", Model)


<!-- ========== BACK TO TOP ========== -->
<div id="back-to-top">
    <i class="fa fa-angle-up" aria-hidden="true"></i>
</div>

<!-- ========== SEARCH ========== -->
<div class="fullscreen-search open-search">
    <div class="inner">
        <form class="search-form">
            <div class="search-title">
                <h1 class="title">Start Typing</h1>
                <h1 class="title-down">Searching...</h1>
            </div>
            <fieldset class="field-container">
                <input type="text" placeholder="Search..." class="field form-control" />
                <div class="icons-container">
                    <div class="icon-search"><i class="fa fa-search" aria-hidden="true"></i></div>
                    <div class="icon-close"><i class="fa fa-times" aria-hidden="true"></i></div>
                </div>
            </fieldset>
        </form>
    </div>
    <button type="button" class="search-close"><i class="fa fa-times"></i></button>
</div>


