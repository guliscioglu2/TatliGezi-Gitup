
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model TatliGezi.Models.ResetPasswordModel

<head>
    <!-- ========== SEO ========== -->
    <title>Tatli Gezi - Kullanıcı Şifre Yenileme</title>

    <meta content="Kullanıcı giriş ve bilgilerini yenileme " name="description">
    <meta content="kullanıcı, kayıt, giriş, şifre unuttum" name="keywords">
    <meta content="Gül İşçioğlu" name="author">



</head>

@Html.AntiForgeryToken()
@using (Html.BeginForm())
{




    <div class="container" style="margin-bottom:20px;">

        <div class="row">
            <div class="col-lg-8">

                   @using (Html.BeginForm("ResetPassword", "LoginUser", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="product-tabs mt50">
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#description" aria-controls="description" role="tab" data-toggle="tab">Şifre Sıfırlama</a></li>

                        </ul>
                        <!-- Nav tabs -->
                        <div class="tab-content">
                            <!-- TAB -->
                            <div role="tabpanel" class="tab-pane active" id="description">

                                @*<div class="text-success">
                                    @ViewBag.Message
                                </div>*@
                                <div class="alert alert-success alert-dismissible" role="alert">
                                    <strong>Başarılı!</strong>   @ViewBag.Message
                                </div>
                                <div class="form-group mb30">
                                    <div class="row">

                                        <div class="col-md-offset-2 col-md-8">

                                            @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control", type = "password", placeholder = "Yeni Şifre" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group mb30">
                                    <div class="row">

                                        <div class="col-md-offset-2 col-md-8">

                                            @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control", type = "password", placeholder = "Şifre Tekrarı" })
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.HiddenFor(x => x.ResetCode)
                                </div>

                                <div class="form-group mb30">
                                    <div class="row">

                                        <div class="col-md-offset-2 col-lg-8 col-md-8">
                                            <div class="a-right p-t-30">
                                                <button type="submit" class="btn green">Şifre Oluştur</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>




                    </div>

                }
            </div>
        </div>
    </div>
}
