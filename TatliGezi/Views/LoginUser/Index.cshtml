
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model TatliGezi.Models.User
<head>
    <!-- ========== SEO ========== -->
    <title>Tatli Gezi - Kullanıcı Giriş</title>

    <meta content="Kullanıcı giriş ve bilgileri " name="description">
    <meta content="kullanıcı, kayıt, giriş" name="keywords">
    <meta content="Gül İşçioğlu" name="author">



</head>



<!-- ========== HEADER ========== -->
@Html.Partial("_Header", Model)
<style>
    .selectpicker {
        width: 100% !important;
    }
</style>

<!-- =========== PAGE TITLE ========== -->
<div class="page-title">
    <div class="container">
        <div class="inner">
            <h1>Giriş Yap</h1>
            <ol class="breadcrumb">
                <li><a href="/anasayfa/">AnaSayfa</a></li>
                <li>Giriş Yap</li>
            </ol>
        </div>
    </div>
</div>

<!-- =========== MAIN ========== -->

@using (Html.BeginForm())
{




    <div class="container" style="margin-bottom:20px;">
        @if (ViewBag.Durum == 0)
        {
            <div class="alert alert-danger">Ooopsss!...Kullanıcı adı veya şifre yanlış.</div>
        }

        @if (ViewBag.Durum == -1)
        {
            <div class="alert alert-danger">Ooopsss!...Lütfen Gerekli Alanları Doldurunuz.</div>
        }

        <div class="row">
            <div class="col-lg-8">
             
                    @using (Html.BeginForm())
                    {
                        <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />

                        <div class="product-tabs mt50">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs" role="tablist">
                                <li role="presentation" class="active"><a href="#description" aria-controls="description" role="tab" data-toggle="tab">Giriş Yap</a></li>
                                <li role="presentation"><a href="/uyeol">Üye Ol</a></li>

                            </ul>
                            <div class="tab-content">
                                <!-- TAB -->
                                <div role="tabpanel" class="tab-pane active" id="description">
                                    <div class="form-group mb30">
                                        <div class="row">

                                            <div class="col-md-8">
                                                @Html.TextBoxFor(x => x.Email, new { @class = "form-control ", placeholder = "Kulanıcı Adı" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group mb30">
                                        <div class="row">

                                            <div class="col-md-8">
                                                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password", placeholder = "Şifre" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group mb30">
                                        <div class="row">

                                            <div class="col-md-8">
                                                <a class="d-block small" href="/sifremiunuttum/">Şifremi Unuttum?</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div colspan="50" class="a-right pt50">
                                    <input type="submit" name="name" class="btn md green" value="GİRİŞ YAP" />
                                </div>
                            </div>




                        </div>

                    }
            </div>
        </div>
    </div>
}
<!-- ========== FOOTER ========== -->
@Html.Partial("_Footer", Model)


<!-- ========== BACK TO TOP ========== -->
<div id="back-to-top">
    <i class="fa fa-angle-up" aria-hidden="true"></i>
</div>







