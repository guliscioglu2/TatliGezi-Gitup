
@{
    ViewBag.Title = "UpdatePassword";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



@model TatliGezi.Models.ForgetPassword


<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group">
                                <label>Yeni Şifre</label>
                                <input type="password" id="password" class="cke_dialog_ui_input_password">
                                @*@Html.PasswordFor(x => x.Password)*@
                            </div>

                            <input type="button" id="pass" name="name" class="btn btn-primary" value="Kaydet" />

                        }

                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

@section js{



    <script src="~/Content/Admin1/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Admin1/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script>
    $("#pass").click(function () {

    var mess = new Object();
    mess.Password = $("#password").val();
    mess.ID = @Model.UserID;
    $.ajax({

    type: 'POST',
    url: '/Admin/LoginAdmin/UpdatePassword1/',
    data: mess,
    success: function (data) {
    window.location.href = "/Admin/LoginAdmin/ForgetPasswordList/";

    }
    })


    });

    </script>

}

