@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@model List<TatliGezi.Models.Article>

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Makale Listesi</h1>
    </div>

</div>


<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            <a href="/Admin/Article/ArticleAdd/" class="btn btn-info btn-block" role="button">Yeni Ekle</a>
            <br />
        </div>
        <div class="panel panel-default">

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Başlık</th>

                                <th>Eklenme Tarihi</th>

                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="a_@item.ID">
                                    <td><img src="@item.PhotoPath1" width="60" /></td>
                                    <td>@item.ArticleTitle</td>
                                    <td>@item.AddDate</td>
                                    <td><a href="/Admin/Article/ArticleEdit/@item.ID" style="font-size:x-large" title="Düzenle"><i class="fa fa-edit"></i></a>  <a style="font-size:x-large;cursor:pointer" title="Sil" onclick="sil('/Article/Delete/',@item.ID)"><i class="fa fa-eraser"></i></a> <a href="/Admin/Article/DateEdit/@item.ID" style="font-size:x-large" title="Tarih Güncelle"><i class="fa fa-calendar"></i></a> <a href="/Admin/Article/TagAdd/@item.ID" style="font-size:x-large" title="Etiket Ekle"><i class="fa fa-tags"></i></a></td>

                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

<script src="~/Content/Admin1/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/Admin1/vendor/bootstrap/js/bootstrap.min.js"></script>

<script src="~/Content/Admin1/vendor/datatables/jquery.dataTables.js"></script>
<script src="~/Content/Admin1/vendor/datatables/dataTables.bootstrap4.js"></script>

<script src="~/Scripts/Delete.js"></script>



<script>

    $(document).ready(function () {
        $('#dataTables-example').DataTable({
            responsive: true
        });
    });


</script>




