@model TatliGezi.Models.MultipleData.ArticleAdd

<div class="row">
    <div class="col-lg-12">
        @if (Model.article != null)
        {
            <h1 class="page-header">Makale Düzenleme Formu</h1>
        }
        else
        {
            <h1 class="page-header">Makale Ekleme Formu</h1>
        }

    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            @if (ViewBag.Durum == -1)
            {
                <div class="alert alert-danger">Ooopsss!...Lütfen Gerekli Alanları Doldurunuz.</div>
            }

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @id = "article-panel", @enctype = "multipart/form-data" }))
                        {

                            <div class="form-group">
                                <label>Başlık</label>
                                @Html.TextBoxFor(x => x.article.ArticleTitle, new { name = "title", id = "Title" })
                                @Html.HiddenFor(x => x.article.ID, new { id = "ID" })

                            </div>

                            <div class="form-group">
                                <label>Kategori Seçiniz</label>
                                @Html.DropDownList("CategoryList", (List<SelectListItem>)ViewData["Category"], new { @class = "form-control", id = "Category" })
                            </div>
                            <div class="form-group">
                                <label>Resim:</label>
                                <input type="file" name="resim" id="resim" />
                                <label>Resim Açıklaması:</label>

                                @Html.TextBoxFor(x => x.article.ImageDescription1, new { id = "ImageDescription1" })

                            </div>


                            if (Model.value == 1)
                            {
                                <h4>Standard</h4>



                            }

                            if (Model.value == 2)
                            {
                                <p>Audio</p>

                                <div class="form-group">
                                    <label>Müzik:</label>
                                    <input type="file" name="music" id="music" />
                                </div>

                            }
                            if (Model.value == 3)
                            {
                                <p>Video</p>

                                <div class="form-group">
                                    <label>Video Url</label>
                                    @Html.TextBoxFor(x => x.article.Url, new { id = "Url" })
                                </div>


                            }

                            if (Model.value == 4)
                            {
                                <p>Gallery</p>


                                <div class="form-group">
                                    <label>Resim2:</label>
                                    <input type="file" name="resim2" id="resim2" />
                                    <label>Resim Açıklaması:</label>
                                    @Html.TextBoxFor(x => x.article.ImageDescription2, new { id = "ImageDescription2" })

                                </div>
                                <div class="form-group">
                                    <label>Resim3:</label>
                                    <input type="file" name="resim3" id="resim3" />
                                    <label>Resim Açıklaması:</label>
                                    @Html.TextBoxFor(x => x.article.ImageDescription3, new { id = "ImageDescription3" })

                                </div>
                            }

                            if (Model.value == 5)
                            {
                                <p>Quote</p>

                                <div class="form-group">
                                    <label>Söz</label>
                                    @Html.TextAreaFor(x => x.article.QuoteContent, new { id = "Content" })
                                </div>

                                <div class="form-group">
                                    <label>Yazar</label>
                                    @Html.TextBoxFor(x => x.article.QuoteAuthor, new { id = "Author" })
                                </div>
                            }

                            <div class="form-group">
                                <label>İçerik</label>
                                @Html.TextAreaFor(x => x.article.ArticleContent, new { name = "editor", id = "editor" })
                            </div>
                            <div class="form-group">
                                <label>Kısa Açıklama</label>
                                @Html.TextAreaFor(x => x.article.MetaDescription)
                            </div>

                            <div class="form-group">
                                <label>Yazar</label>
                                @Html.TextBoxFor(x => x.article.Author, new { id = "Author" })
                                @Html.HiddenFor(x => x.article.ID, new { id = "ID" })
                            </div>


                            <div class="form-group">
                                <label>Kelimeler</label>

                                @Html.TextBoxFor(x => x.article.Keywords, new { name = "keywords", id = "keywords" })

                            </div>

                            if (Model.article != null)
                            {
                                <input type="submit" name="command" class="btn btn-primary" value="Kaydet" />
                                <input type="submit" name="command" class="btn btn-info" value="Ön izleme" />
                            }
                            else
                            {
                                <input type="submit" name="command" class="btn btn-primary" value="Yayınla" />
                                <input type="submit" name="command" class="btn btn-info" value="Ön izleme" />
                                <input type="submit" name="command" class="btn btn-default" value="Taslak Olarak Kaydet" />
                            }




                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>