
@{
    ViewBag.Title = "UserEdit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model TatliGezi.Models.User
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Kullanıcı Düzenleme Formu</h1>




    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            @if (ViewBag.Durum == -1)
            {
                <div class="alert alert-danger">Ooopsss!...Lütfen Gerekli Alanları Doldurunuz.</div>
            }

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            @*<div class="form-group">
                                <label>Ad</label>
                                @Html.TextBoxFor(x => x.Name)
                                @Html.ValidationMessageFor(x => x.Name)
                            </div>*@
                            <div class="form-group">
                                <label>Soyad</label>
                                @Html.TextBoxFor(x => x.Surname)
                                @Html.ValidationMessageFor(x => x.Surname)
                            </div>
                            <div class="form-group">
                                <label>E-Mail</label>
                                @Html.TextBoxFor(x => x.Email)
                                @Html.ValidationMessageFor(x => x.Email)
                            </div>



                            <input type="submit" name="name" class="btn btn-primary" value="Kaydet" />

                        }

                    </div>
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>



<script src="~/Content/Admin1/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/Admin1/vendor/bootstrap/js/bootstrap.min.js"></script>

<script src="~/Content/Admin1/vendor/datatables/jquery.dataTables.js"></script>
<script src="~/Content/Admin1/vendor/datatables/dataTables.bootstrap4.js"></script>


<script>
    $(document).ready(function () {
        $(".form-group input").addClass("form-control");

    })
</script>


