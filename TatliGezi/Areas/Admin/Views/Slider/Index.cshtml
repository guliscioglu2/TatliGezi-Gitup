
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



@model List<TatliGezi.Models.Slider>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Slider Kategori Listesi</h1>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            <a href="/Admin/Slider/SliderAdd/" class="btn btn-info btn-block" role="button">Yeni Ekle</a>
            <br />
        </div>

        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Slider Başlık</th>
                            <th>Eklenme Tarihi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="a_@item.ID">
                                <td>@item.Content</td>
                                <td>@item.AddDate</td>


                                <td><a href="/Admin/Slider/SliderEdit/@item.ID" style="font-size:x-large" title="Düzenle"><i class="fa fa-edit"></i></a>  <a style="font-size:x-large;cursor:pointer" title="Sil" onclick="sil('/Slider/Delete/', '@item.ID')"> <i class="fa fa-eraser"> </i></a> </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<script src="~/Content/Admin1/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/Admin1/vendor/bootstrap/js/bootstrap.min.js"></script>

<script src="~/Content/Admin1/vendor/datatables/jquery.dataTables.js"></script>
<script src="~/Content/Admin1/vendor/datatables/dataTables.bootstrap4.js"></script>

<script src="~/Scripts/Delete.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').dataTable({
            responsive: true
        });
    });

</script>





