





@model TatliGezi.Models.Shop.Product

<div class="row">
    <div class="col-lg-12">
        @if (Model != null)
        {
            <h1 class="page-header">Ürün Düzenleme Formu</h1>
        }
        else
        {
            <h1 class="page-header">Ürün Ekleme Formu</h1>
        }

    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            @if (ViewBag.Durum == -1)
            {
                <div class="alert alert-danger">Ooopsss!...Lütfen Gerekli Alanları Doldurunuz.</div>
            }
            @if (ViewBag.Durum == 0)
            {
                <div class="alert alert-danger">Bu değer girilmiştir.</div>
            }

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <label>Ürün Adı</label>

                                @Html.TextBoxFor(x => x.ProductName)
                            </div>
                            <div class="form-group">
                                <label>Marka Adı</label>

                                @Html.TextBoxFor(x => x.Brand)
                            </div>
                            <div class="form-group">
                                <label>Model Adı</label>

                                @Html.TextBoxFor(x => x.Model)
                            </div>

                            <div class="form-group">
                                <label>Kategori Seçiniz:</label>
                                @Html.DropDownList("CategoryList", (List<SelectListItem>)ViewData["Category"], new { @class = "form-control", id = "Category" })
                            </div>
                            <div class="form-group">
                                <label>Ürün Fiyatı:</label>

                                @Html.TextBoxFor(x => x.Price)
                            </div>

                            <div class="form-group">
                                <label>KDV Oranı(%):</label>
                                @Html.DropDownList("KDVRateList", (List<SelectListItem>)ViewData["KDVRate"], new { @class = "form-control", id = "KDVRate" })


                            </div>
                            <div class="form-group">
                                <label>İndirim Oranı(%):</label>

                                @Html.TextBoxFor(x => x.Discount)
                            </div>
                            <div class="form-group">
                                <label>Stok Adedi:</label>

                                @Html.TextBoxFor(x => x.Stock)
                            </div>


                            <div class="form-group">
                                <label>Ürün Açıklaması:</label>


                                @Html.TextAreaFor(x => x.Description, new { id = "description" })

                            </div>
                            <div class="form-group">
                                <label>Kelimeler:</label>


                                @Html.TextAreaFor(x => x.Keywords, new { id = "keywords" })

                            </div>


                            if (Model != null)
                            {
                                <input type="submit" name="name" class="btn btn-primary" value="Kaydet" />

                            }
                            else
                            {
                                <input type="submit" name="name" class="btn btn-primary" value="Kaydet ve Resim Ekle" />

                            }

                        }

                    </div>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
