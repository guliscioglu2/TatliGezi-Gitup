
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@model List<TatliGezi.Models.Shop.Product>

<script src="~/Content/Admin1/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/Admin1/vendor/bootstrap/js/bootstrap.min.js"></script>

<link href="/Content/Admin/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />





<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Ürün Listesi</h1>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            <a href="/Admin/Product/ProductAdd/" class="btn btn-info btn-block" role="button">Yeni Ekle</a>
            <br />
        </div>

        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Ürün Adı</th>
                            <th>Eklenme Tarihi</th>

                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr id="a_@item.ID">
                            <td><img src="@item.ImageView" width="60" /></td>

                            <td>@item.ProductName</td>
                            <td>@item.AddDate</td>


                            <td><a href="/Admin/Product/ProductEdit/@item.ID" style="font-size:x-large" title="Düzenle"><i class="fa fa-edit"></i></a>  <a style="font-size:x-large;cursor:pointer" title="Sil" onclick="sil('/Product/Delete/',@item.ID)"><i class="fa fa-eraser"></i></a>  <a href="/Admin/Product/ProductImageEdit/@item.ID" style="font-size:x-large" title="Resim Düzenle"><i class="fa fa-images"></i></a></td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<script src="~/Content/Admin/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/Admin/vendor/bootstrap/js/bootstrap.min.js"></script>

<script src="~/Content/Admin/vendor/datatables/jquery.dataTables.js"></script>
<script src="~/Content/Admin/vendor/datatables/dataTables.bootstrap4.js"></script>

<script src="~/Scripts/Delete.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').dataTable({
            responsive: true
        });
    });

</script>




