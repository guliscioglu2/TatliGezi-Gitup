
@{
    ViewBag.Title = "OrderList";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model List<TatliGezi.Models.Shop.Order>


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sipariş Listesi</h1>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
             <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr class="shopping-cart-table-header">
                            <th hidden></th>
                            <th scope="col" rowspan="1">Sipariş No:</th>
                            <th scope="col" rowspan="1">Durum:</th>

                            <th scope="col" rowspan="1"><span class="nobr">Ürün Adı:</span></th>
                            <th scope="col" class="a-center" colspan="1"><span class="nobr">Fiyatı:</span></th>
                            <th scope="col" rowspan="1" class="a-center">Adet:</th>
                            <th scope="col" class="a-center" colspan="1">Toplam:</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {

                        <tbody>

                            <!-- ITEM -->
                            <tr class="item">
                                <td hidden id="basketID"> @item.ID </td>

                                <td>
                                    <h5 class="product-name">
                                        <a href="shop-details.html">@item.OrderCode</a>
                                    </h5>
                                </td>
                                <td>
                                    <h5 class="product-name">
                                        <a href="shop-details.html">@item.Status.Name</a>
                                    </h5>
                                </td>

                                <td>
                                    @foreach (var item1 in @item.OrderProducts)
                                    {
                                        <!--<figure class="image-hover">
                <a href="shop-details.html" class="product-image" style="float:left;">-->
                                        @*<img src="@item1.Product.ImageView" style="width:20%;" class="text-center box">*@
                                        <!--<img class="img-responsive">
                    <span class="view-text sm">Ürünü Gör</span>
                </a>
            </figure>-->

                                        <a href="" class="product-image">@item1.Product.ProductName</a>



                                    }
                                </td>

                            </tr>
                            <!-- ITEM -->

                        </tbody>

                    }
                </table>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<script src="~/Content/Admin1/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/Admin1/vendor/bootstrap/js/bootstrap.min.js"></script>

<script src="~/Content/Admin1/vendor/datatables/jquery.dataTables.js"></script>
<script src="~/Content/Admin1/vendor/datatables/dataTables.bootstrap4.js"></script>

<script src="~/Scripts/Delete.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').dataTable({
            responsive: true
        });
    });

</script>



