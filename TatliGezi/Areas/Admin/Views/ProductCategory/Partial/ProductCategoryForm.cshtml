





@model TatliGezi.Models.Shop.ProductCategory

<div class="row">
    <div class="col-lg-12">
        @if (Model != null)
        {
            <h1 class="page-header">Kategori Düzenleme Formu</h1>
        }
        else
        {
            <h1 class="page-header">Kategori Ekleme Formu</h1>
        }

    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            @if (ViewBag.Durum == -1)
            {
                <div class="alert alert-danger">Ooopsss!...Lütfen Gerekli Alanları Doldurunuz.</div>
            }
            @if (ViewBag.Durum == 0)
            {
                <div class="alert alert-danger">Bu değer girilmiştir.</div>
            }

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group">
                                <label>Kategori Adı</label>

                                @Html.TextBoxFor(x => x.CategoryName)
                            </div>

                            <input type="submit" name="name" class="btn btn-primary" value="Kaydet" />

                        }

                    </div>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
