
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



@model List<TatliGezi.Models.Gallery>

<script src="~/Content/Admin1/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/Admin1/vendor/bootstrap/js/bootstrap.min.js"></script>

<link href="/Content/Admin/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />





<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Galeri Listesi</h1>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            <a href="/Admin/Gallery/GalleryAdd/" class="btn btn-info btn-block" role="button">Yeni Ekle</a>
            <br />
        </div>

        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Galleri Url</th>
                            <th>Eklenme Tarihi</th>

                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="a_@item.ID">
                                <td><img src="@item.PhotoPath" width="60" /></td>

                                <td>@item.Url</td>
                                <td>@item.AddDate</td>


                                <td>
                                    <a href="/Admin/Gallery/GalleryEdit/@item.ID" style="font-size:x-large" title="Düzenle"><i class="fa fa-edit"></i></a>  <a style="font-size:x-large;cursor:pointer" title="Sil" onclick="sil('/Gallery/Delete/',@item.ID)"><i class="fa fa-eraser"></i></a>
                                    @if (item.IsSlider == false)

                                    {<a style="font-size:x-large;cursor:pointer" title="Slayt olarak ekle" onclick="slider('/Gallery/Slider/',@item.ID)"><i class="fa fa-sliders-h"></i></a>}
                                    else
                                    {
                                        <a style="font-size:x-large;cursor:pointer" title="Slayttan çıkar" onclick="sliderDel('/Gallery/SliderDel/',@item.ID)"><i class="fa fa-sliders-h" style="color:green;"></i></a>
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->

        </div>
        <!-- /.panel-body -->
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>


<script src="~/Content/Admin/vendor/jquery/jquery.min.js"></script>
<script src="~/Content/Admin/vendor/bootstrap/js/bootstrap.min.js"></script>

<script src="~/Content/Admin/vendor/datatables/jquery.dataTables.js"></script>
<script src="~/Content/Admin/vendor/datatables/dataTables.bootstrap4.js"></script>

<script src="~/Scripts/Delete.js"></script>
<script src="~/Scripts/Slider.js"></script>
<script src="~/Scripts/sliderDel.js"></script>

<script>
    $(document).ready(function () {
        $('#dataTables-example').dataTable({
            responsive: true
        });
    });

</script>





